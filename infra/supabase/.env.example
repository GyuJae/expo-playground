############
# Secrets
# 프로덕션 배포 전 반드시 변경 필요
# generate-keys.sh 실행으로 자동 생성 가능
############

POSTGRES_PASSWORD=your-super-secret-and-long-postgres-password
JWT_SECRET=your-super-secret-jwt-token-with-at-least-32-characters-long
ANON_KEY=your-anon-key-generated-by-generate-keys-script
SERVICE_ROLE_KEY=your-service-role-key-generated-by-generate-keys-script
DASHBOARD_USERNAME=supabase
DASHBOARD_PASSWORD=your-dashboard-password
SECRET_KEY_BASE=your-secret-key-base-at-least-64-characters
VAULT_ENC_KEY=your-32-character-encryption-key!
PG_META_CRYPTO_KEY=your-encryption-key-32-chars-min!


############
# Database
############

POSTGRES_HOST=db
POSTGRES_DB=postgres
POSTGRES_PORT=5432


############
# Supavisor — 커넥션 풀링
############

POOLER_PROXY_PORT_TRANSACTION=6543
POOLER_DEFAULT_POOL_SIZE=20
POOLER_MAX_CLIENT_CONN=100
POOLER_TENANT_ID=your-tenant-id
POOLER_DB_POOL_SIZE=5


############
# Kong API Gateway
############

KONG_HTTP_PORT=8000
KONG_HTTPS_PORT=8443


############
# PostgREST
############

PGRST_DB_SCHEMAS=public,storage,graphql_public


############
# Auth (GoTrue)
############

## 일반
SITE_URL=https://your-domain.com
ADDITIONAL_REDIRECT_URLS=https://your-domain.com/**,exp://your-expo-scheme/**
JWT_EXPIRY=3600
DISABLE_SIGNUP=false
API_EXTERNAL_URL=https://api.your-domain.com

## Google OAuth
ENABLE_GOOGLE_SIGNUP=true
GOOGLE_OAUTH_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_OAUTH_CLIENT_SECRET=your-google-client-secret

## 이메일
MAILER_URLPATHS_CONFIRMATION="/auth/v1/verify"
MAILER_URLPATHS_INVITE="/auth/v1/verify"
MAILER_URLPATHS_RECOVERY="/auth/v1/verify"
MAILER_URLPATHS_EMAIL_CHANGE="/auth/v1/verify"

## 이메일 인증
ENABLE_EMAIL_SIGNUP=true
ENABLE_EMAIL_AUTOCONFIRM=false
SMTP_ADMIN_EMAIL=admin@your-domain.com
SMTP_HOST=smtp.your-email-provider.com
SMTP_PORT=587
SMTP_USER=your-smtp-user
SMTP_PASS=your-smtp-password
SMTP_SENDER_NAME=YourApp

## 전화 인증 (비활성화)
ENABLE_PHONE_SIGNUP=false
ENABLE_PHONE_AUTOCONFIRM=false

## 익명 사용자
ENABLE_ANONYMOUS_USERS=false


############
# Studio — 관리 대시보드
############

STUDIO_DEFAULT_ORGANIZATION=Default Organization
STUDIO_DEFAULT_PROJECT=Default Project
SUPABASE_PUBLIC_URL=https://api.your-domain.com

## WebP 지원
IMGPROXY_ENABLE_WEBP_DETECTION=true

## OpenAI (SQL Editor 보조, 선택사항)
OPENAI_API_KEY=


############
# Analytics — 로그 수집
############

LOGFLARE_PUBLIC_ACCESS_TOKEN=your-logflare-public-token
LOGFLARE_PRIVATE_ACCESS_TOKEN=your-logflare-private-token


############
# Docker
############

DOCKER_SOCKET_LOCATION=/var/run/docker.sock


############
# 도메인 (Caddy에서 사용)
############

DOMAIN=your-domain.com
